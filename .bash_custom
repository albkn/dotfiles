# Set prompt style
parse_git_branch() {
  git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}
export PS1='\[\033[0;33m\]\u@\h\[\033[0m\] in \[\033[0;32m\]\w\[\033[0m\]$(parse_git_branch) \$ '

# Use Vim keybindings
set -o vi
alias :q!="exit"

# Use Vim as default editor
export EDITOR=vim
